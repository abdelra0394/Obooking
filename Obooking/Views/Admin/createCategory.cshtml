@model Obooking.Models.Category

@{
    ViewBag.Title = "create Category";
}

<div class="box">
    @using (Html.BeginForm("createCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <h1>Create Category</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h4> @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" }) </h4>
            <div class="text">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>
        <h6> Welcome admin in this page You can </h6>
        <h6> <span>add</span> Category and <span>Delete</span> it  </h6>
        <div class="form-group">
            <div class="submit">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    }

    <div class="actionbtn">
        <button onclick="location.href = '@Url.Action("ShowCategories", "Admin")'">Show Categories </button>
        <button onclick="location.href = '@Url.Action("Show", "Admin")'">Main Page </button>
    </div>
</div>


<style>
    body {
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background-color: gray;
    }

    .box {
        width: 100%;
        height: 100%;
        padding: 40px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        text-align: center;
        background-color: black;
    }


        .box h4 {
            color: white;
            margin-top: 50px;
        }

        .box h1 {
            color: white;
            text-transform: uppercase;
            font-weight: 500;
        }

        .box h6 {
            margin-left: 350px;
            color: white;
            font-family: 'Lucida Sans Typewriter';
            font-weight: 500;
            font-size: 2.5em;
        }

            .box h6 span {
                color: red;
                font-family: 'Lucida Sans Typewriter';
                font-weight: 500;
            }

        .box input[type = "text"], .box input[type = "password"] {
            border: 0;
            background: none;
            display: block;
            margin: 20px auto;
            text-align: center;
            border: 2px solid #3498db;
            padding: 14px 10px;
            width: 200px;
            outline: none;
            color: white;
            border-radius: 24px;
            transition: 0.25s;
            margin-left: 120px;
        }

            .box input[type = "text"]:focus, .box input[type = "password"]:focus {
                width: 240px;
                border-color: #2ecc71;
            }

        .box input[type = "submit"] {
            border: 0;
            background: none;
