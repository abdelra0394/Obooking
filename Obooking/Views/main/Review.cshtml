@model Obooking.Models.Review

@{
    ViewBag.Title = "Add_Review";

}
@using (Html.BeginForm("Review", "main", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="box">
        <h2>Add Review</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h4>@Html.LabelFor(model => model.Review_content, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
            <div style="text-align:left; font-family:Britannic;font-size:1.1em;
                            color:black; border-radius:15px;">
                @Html.TextAreaFor(model => model.Review_content, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Review_content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4>@Html.LabelFor(model => model.Book_Name, htmlAttributes: new { @class = "control-label col-md-2" })</h4>
            <div class="text">
                @Html.DropDownListFor(model => model.Book_Name, ViewBag.BooksNames as SelectList, ViewBag.check as string, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Book_Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <h6> Welcom bro in this page You can </h6>
        <h6> <span>add</span> Review on Books you <span>only purchased</span> it  </h6>
        <div class="form-group">
            <div class="submit">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


